<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= u[0].name %></title>
  <script src="styles/js/user/script.js"></script>
  <link rel="stylesheet" href="styles/css/user/styles.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>

<body>
  <header>
    <div class="head_container">
      <div class="logo">
        <h3 id="brand-name">
          <a href="/">
            VknowIT
          </a>
        </h3>
      </div>
      <div class="menu" id="myTopnav">
        <ul>
          <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="openNav()">&#9776;</a>
          <!-- <li><a href="#"><i class="fas fa-users"></i> Users</a></li> -->
          <form action="/searchResults" method="post" class="searchForm">
            <li><input id="search" type="text" placeholder="  Search..." onkeyup="showResults(this.value)" name="SearchBar"></li>
            <li><a href="/searchResults" class="searchIcon"><button><i class="fas fa-search"></i></button></a></li>
            <!-- <li><a href="/searchResults" class="searchIcon"><i class="fas fa-search"></i></a></li> -->
          </form>
          <!-- <li><input id="search" type="text" placeholder="  Search..."></li> -->
          <!-- <li><a href="#" class="searchIcon"><i class="fas fa-search"></i></a></li> -->
          <!-- <li><a class="anc" href="#"><i class="fas fa-globe"></i> Translate</a></li> -->
          <li><a class="ask" href="/addQuestion"><button id="add-ques">Ask Question</button></a></li>
          <li><a href="/logIn"><i class="fas fa-sign-out-alt fa-2x"></i></a></li>

        </ul>
      </div>
    </div>
  </header>
  <div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a href="/user"><i class="fas fa-users"></i> Users</a>
    <form action="/searchResults" method="post" class="searchForm">
      <li><input id="search" type="text" placeholder="  Search..." onkeyup="showResults(this.value)" name="SearchBar"></li>
      <li><a href="/searchResults" class="searchIcon"><button><i class="fas fa-search"></i></button></a></li>
      <!-- <li><a href="/searchResults" class="searchIcon"><i class="fas fa-search"></i></a></li> -->
    </form>
    <!-- <a href="#"> <i class="fas fa-globe"></i> Translate</a> -->
    <a href="/addQuestion"><button id="add-ques">Ask Question</button></a>
  </div>


  <!--Orange navbar here-->
  <nav>
    <div class="navbar" id="topnavbar">
      <span><a href="/">All Questions</a></span>
      <!-- <span><a href="#">Trending</a></span> -->
      <span><a href="/latest">Latest</a></span>
      <span><a href="/unanswered">Unanswered</a></span>
      <!-- <span><a href="#">Bounty Questions</a></span> -->
  </nav>

  <section>
    <div id="div1">
      <div id="image">
        <!-- <img src="https://www.bootdey.com/img/Content/avatar/avatar7.png" alt="Profile Picture"> -->
        <img src="https://cdn.iconscout.com/icon/free/png-256/laptop-user-1-1179329.png" alt="Profile Picture">
        <% if(u[0].answers.length > 10 && u[0].answers.length < 25){ %>
          <img id="medal" src="https://banner2.cleanpng.com/20201014/cey/transparent-gold-medal-5f8688feb3ba98.4466920316026524147362.jpg" alt="">
        <% } else if(u[0].answers.length > 25 && u[0].answers.length < 50) { %>
          <img id="medal" src="https://banner2.cleanpng.com/20201013/zpw/transparent-gold-medal-5f860f218c4b31.2548340716026212175747.jpg" alt="">
        <% } else if(u[0].answers.length > 50){ %>
          <img id="medal" src="https://banner2.cleanpng.com/20201013/wfi/transparent-gold-medal-5f85c6c751e380.4879464116026026953354.jpg" alt="">
        <% } %>
      </div>
      <div id="profileDetails">
        <p id="p1"><i class="fas fa-user"></i><%= u[0].name %></p>
        <p id="p2"><i class="far fa-calendar-alt"></i><%= u[0].age %> </p>
        <br>
        <p id="p3"><i class="fas fa-envelope"></i><%= u[0].username %></p>
        <p id="p4"><i class="fas fa-mobile-alt"></i><%= u[0].phoneNumber %></p>
      </div>
      <div id="buttons">
        <p id="b1"> Number of Questions Asked: <b><%= q.length %></b></p>
        <p id="b1"> Number of Question Answered: <b><%= u[0].answers.length %></b></p>
      </div>
    </div>

    <h1>Questions Asked by You</h1><br>
    <% q.forEach(function(question){ %>
    <div id="div2">
      <div class="allcards">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg 3 col-md-12 col-xs-12">
              <div class="card" id="id1">
                <div class="card-body text-primary" id="c">
                  <div id="cc">
                    <img src="https://cdn.iconscout.com/icon/free/png-256/laptop-user-1-1179329.png" id="c1">
                    <p class="card-title" id="c2"><%= question.username %></p>
                    <div class="content_img">
                      <i class="fas fa-check" id="c3"></i>
                      <div>Verified Account</div>
                    </div>
                  </div>
                  <!-- <a href="#" id="c4"><i class="fas fa-user-plus"></i>Follow</a><br> -->
                  <!-- <span id="c5">IP University</span><br> -->
                  <h6 class="time">
                    <p>Asked on <%= question.time %></p>
                  </h6>
                  <p class="card-text" id="c6">
                  <h2 class="card-text"><%= question.questiontitle %></h2>
                  </p><br>
                  <% if (question.question.length < 150){ %>
                    <p id="c7"><%- question.question %></p>
                    <% } else { %>
                    <p id="c7"><%- question.question.slice(0,151) %> ".... click read answers"</p>
                    <% } %>
                  <script>
                    document.getElementById("c7").innerHTML = "<%- question.question %>"
                  </script>
                  <a class="readAns" href="/answer/<%= question.questiontitle %>">Read answers</a><br><br>

                  <% tags = question.questiontags.split(" ") %>
                  <% tags.forEach(function(tag){ %>
                  <a href="" class="btn btn-info" id="c9"><%= tag %></a>
                  <% }) %>

                  <div id="c8Div">
                    <% if (question.answers.length < 2){ %>
                    <a href="#" id="c8"><b id="id2"><%= question.answers.length %></b> Answer</a>
                    <% } else { %>
                    <a href="#" id="c8"><b id="id2"><%= question.answers.length %></b> Answers</a>
                    <% } %>

                    <% if (question.upvotes.length < 2){ %>
                    <a href="/upvote/<%= question.questiontitle %>" id="c8"><i class="far fa-arrow-alt-circle-up"></i><b id="id3"><%= question.upvotes.length %></b> Vote</a><br>
                    <% } else { %>
                    <a href="/upvote/<%= question.questiontitle %>" id="c8"><i class="far fa-arrow-alt-circle-up"></i><b id="id3"><%= question.upvotes.length %></b> Votes</a><br>
                    <% } %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>


  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>

  <!--Footer here-->
  <footer class="footer">
    <div class="container">
      <div class="row align-items-start">
        <div class="col">
          <center>
            Team 7 <br>
            Devang Gupta
            Goutham P.
            Vidhyadhar P.
            Dhesik Vinayak S R
          </center>
      </div>
    </div>
  </footer>
</body>

</html>
