<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/styles/css/style.css" />
  <title>VknowIT</title>
</head>

<body>


  <div class="container">
    <div class="forms-container">
      <div class="signin-signup">
        <form action="/adminLogin" class="sign-in-form" method="post">
          <h2 class="title">Admin Sign in</h2>
          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="text" placeholder="Enter your email" name="username" />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" id="passwordLogIn" name="password" />
            <i class="fas fa-eye-slash eye" id="eyeToggleLogIn" onclick="toggle()"></i>
          </div>
          <div class="checkBox">
            <label class="rememberMe">Remember Me
              <input type="checkbox" name="rememberMe" id="remMe">
            </label>
            <a href="forgot-index.html">Forgot password?</a>
          </div>

          <input type="submit" value="Login" class="btn solid" />
        </form>


        <form action="/adminSignUp" class="sign-up-form" method="post">
          <h2 class="title">Admin Sign up</h2>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Name" name="name" />
          </div>
          <div class="input-field">
            <i class="fas fa-user"></i>
            <input type="number" placeholder="Age" name="age" />
          </div>
          <div class="input-field">
            <i class="fas fa-envelope"></i>
            <input type="email" placeholder="Email" name="username" />
          </div>
          <div class="input-field">
            <i class="fas fa-phone-alt"></i>
            <input type="number" placeholder="Phone Number" name="phoneNumber" />
          </div>
          <div class="input-field">
            <i class="fas fa-lock"></i>
            <input type="password" placeholder="Password" id="passwordSignUp" name="password" />
            <i class="fas fa-eye-slash eye" id="eyeToggleSignUp" onclick="toggle()"></i>
          </div>
          <input type="submit" class="btn" value="Sign up" />
        </form>
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
        </div>
        <img src="/styles/images/login2.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
          <h3>One of us ?</h3>
          <p>
            Login to get connected
          </p>
          <button class="btn transparent" id="sign-in-btn">
            Sign in
          </button>

        </div>
        <img src="/styles/images/register2.svg" class="image" alt="" />
      </div>
    </div>
  </div>


  <script src="/styles/js/script.js"></script>
</body>

</html>
